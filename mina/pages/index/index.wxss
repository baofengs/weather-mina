.container {
    font-size: 14px;
}

.header {
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #fff;
    padding: 20rpx 0;
    z-index: 999;
}

.header .city-name {
    flex: 1;
    text-align: center;
}

.header .options {
    flex: 0;
}

.weather-today {
    height: 60vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.weather-today .temperature {
    font-size: 100px;
}

.weather-today .air-quality {
    display: flex;
    border: 1px solid #212121;
    padding: 10rpx 20rpx;
    border-radius: 5rpx;
}

.scroll-item {
    border: 1px solid red;
}

.flex-wrp {
    display: flex;
    flex-direction: row;
    margin-bottom: 20rpx;
}

.flex-item {
    display: inline-block;
    width: 100px;
    height: 100px;
    border: 1px solid;
}

scroll-view {
    width: 100%;
    white-space: nowrap;
}

.today-hourly-wrap {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.weather-future {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 25rpx;
}

.suggestions {
    display: flex;
    flex-wrap: wrap;
    margin-top: 10rpx;
}

.suggestion-item {
    box-sizing: border-box;
    text-align: center;
    padding: 10rpx;
    border: 1px solid;
    width: 33.3333%;
}
